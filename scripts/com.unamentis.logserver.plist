<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.unamentis.logserver</string>

    <key>ProgramArguments</key>
    <array>
        <string>/usr/bin/python3</string>
        <string>SCRIPT_PATH_PLACEHOLDER</string>
        <string>--port</string>
        <string>8765</string>
        <string>--bind</string>
        <string>0.0.0.0</string>
        <string>--quiet</string>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <true/>

    <key>StandardOutPath</key>
    <string>/tmp/unamentis-logserver.log</string>

    <key>StandardErrorPath</key>
    <string>/tmp/unamentis-logserver.err</string>

    <key>WorkingDirectory</key>
    <string>WORKING_DIR_PLACEHOLDER</string>
</dict>
</plist>
