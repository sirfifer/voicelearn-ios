# UnaMentis Web Client Environment Variables
# Copy this file to .env.local and fill in the values

# =============================================================================
# Server Configuration
# =============================================================================

# Management API URL (required)
NEXT_PUBLIC_API_URL=http://localhost:8766

# WebSocket URL for real-time updates
NEXT_PUBLIC_WS_URL=ws://localhost:8766

# =============================================================================
# Authentication
# =============================================================================

# JWT secret for client-side token validation (optional, server validates)
# JWT_SECRET=your-secret-here

# =============================================================================
# OpenAI Realtime (Primary Voice Path)
# =============================================================================

# Note: API keys are NOT stored client-side. The server provides ephemeral tokens.
# These are only needed if running in standalone mode without the management server.

# OpenAI API Key (server-side only, used to generate ephemeral tokens)
# OPENAI_API_KEY=sk-...

# =============================================================================
# Fallback Providers (Optional)
# =============================================================================

# Deepgram (STT/TTS fallback)
# DEEPGRAM_API_KEY=...

# ElevenLabs (TTS fallback)
# ELEVENLABS_API_KEY=...

# AssemblyAI (STT fallback)
# ASSEMBLYAI_API_KEY=...

# Anthropic (LLM fallback)
# ANTHROPIC_API_KEY=...

# =============================================================================
# Feature Flags
# =============================================================================

# Enable debug logging
NEXT_PUBLIC_DEBUG=false

# Enable mock providers for development (bypasses real API calls)
NEXT_PUBLIC_MOCK_PROVIDERS=false

# =============================================================================
# Analytics (Optional)
# =============================================================================

# PostHog analytics
# NEXT_PUBLIC_POSTHOG_KEY=...
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# =============================================================================
# Development
# =============================================================================

# Skip SSL verification in development
NODE_TLS_REJECT_UNAUTHORIZED=1
