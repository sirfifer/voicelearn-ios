{
  "mcpServers": {
    "ios-simulator": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "ios-simulator-mcp"
      ],
      "env": {}
    },
    "XcodeBuildMCP": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "xcodebuildmcp@latest"
      ],
      "env": {}
    },
    "apple-docs": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@anthropic/apple-docs-mcp"
      ],
      "env": {}
    },
    "slack": {
      "command": "./scripts/mcp-slack.sh"
    },
    "trello": {
      "command": "./scripts/mcp-trello.sh"
    }
  }
}
